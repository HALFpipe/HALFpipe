FeatureSelection {
    #sidebar {
        dock: left;
        width: 40;
        height: 1fr;
        border: thick $primary;
        background: $panel;
        padding: -1 0 0 0;
        Grid {
            padding: 1;
            align: center top;
            dock: top;
            grid-size: 2 2;
            grid-gutter: 1 0;
            height: 9;
            /*border-bottom: thick $primary;*/
            /*border-bottom: thick $primary;*/
            background: $primary;
        }
    }
    .list {
        padding: 0 0 0 0;
    }
    #list {
        align: left top;
        width: 100%;
        column-span: 2;
        row-span: 1;
        text-style: bold;
        height: auto;
    }
    ListView > ListItem.--highlight {
        background: grey 50%;
    }
    ListView:focus > ListItem.--highlight {
        background: grey;
    }
    #content_switcher {
        background: $panel;
        border: thick $primary;
        border-title-background: $primary;
        border-title-color: white;
        border-title-style: bold;
    }
    ContentSwitcher {
        width: 100%;
        height: 1fr;
    }
    Label {
        margin: 1 1 1 1;
    }
    Button {
        margin: 0 0 0 0;
        background: $secondary;
    }
    .task_based {
        color: crimson;
    }
    .seed_based_connectivity {
        color: silver;
    }
    .dual_regression {
        color: ansi_bright_cyan;
    }
    .atlas_based_connectivity {
        color: blueviolet;
    }
    .reho {
        color: slategray;
    }
    .falff {
        color: magenta;
    }
    .preprocessed_image {
        color: white;
    }
}

FeatureSelectionModal {

    #draggable_modal_screen_container_wrapper {
    min-width: 44;
    height: 28;
    }
    #options {
margin: 1;
    content-align: center middle;


    }

}

ReHo {
    #zscore_panel {
        height: 5;
    }
    #zscore_label {
        height: 3;
        width: 40;
        border: transparent;
    }
}
