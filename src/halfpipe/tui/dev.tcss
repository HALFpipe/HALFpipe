#blockscreen {
    background: black 90%;
    offset-y: -30;
    offset-x: 0;
    opacity: 100%;

    width: 100%;
    height: auto;
    align: center top;
    Button {
        height: 3;
    }
}

#check_meta_data_modal {
    #message {
        height: auto;
        content-align: center middle;
    }
}

#select_value_modal {
    Input {
    }
}

#title {
    content-align-horizontal: center;
    text-style: reverse;
}

#any-key {
    content-align-horizontal: center;
}

#event_files_type_modal {
    #draggable_modal_screen_container_wrapper {
        width: 40;
    }
}

QuitModal {
    #draggable_modal_screen_container_wrapper {
        width: 47;
        height: 11;
        background: black;
    }
    Vertical {
        border-left: thick $accent;
        border-right: thick $accent;
        border-bottom: thick $accent;
        align: center middle;
    }
    Static {
        height: 1;
        content-align: center middle;
        text-style: bold;
    }
    Horizontal {
        height: 4;
        dock: bottom;
        offset-x: 10;
        Button {
            margin: 1;
        }
    }
}

HeaderCloseIcon {
    dock: right;
    padding: 0 1;
    width: 6;
    offset-x: 0;
    content-align: right middle;
    border: solid black;
}

HeaderHelpIcon {
    dock: right;
    padding: 0 1;
    width: 6;
    offset-x: -5;
    content-align: right middle;
    border: solid black;
}

SelectionModal {
    #draggable_modal_screen_container_wrapper {
        width: 81;
        background: black;
    }
    RadioSet {
        height: auto;
        width: auto;
    }

    Horizontal {
        height: 4;
        width: 100%;
        align: right bottom;
        offset-x: 0;
        Button {
            margin: 0 1;
        }
    }

    #title {
        content-align: center middle;
        text-style: bold;
        content-align: center middle;
        text-align: center;
        width: auto;
        margin: 1 1 0 1;
    }
}

DoubleSelectionModal {
    Static {
        padding: 0 1;
    }
    #draggable_modal_screen_container_wrapper {
        width: 50;
        height: 18;
        background: black;
    }
    RadioSet {
        height: 4;
        width: 48;
    }
}

WindowTitleBar {
    layout: horizontal;
    width: 100%;
    height: 3;
    background: $accent;
    color: auto;
    text-style: bold;
}

WindowTitleBar Button {
    max-width: 6;
    height: 3;
    padding-top: 0;
    padding-left: 0;
    background: $accent;
    border: none;
}

WindowTitleBar Button:hover {
    border: none;
    border-top: none;
    border-bottom: none;
    background: $accent;
    color: black;
    border: thick black;
}

WindowTitleBar Button:focus {
    text-style: none;
}

.window_title {
    width: 1fr;
    height: 100%;
    content-align: left middle;
    padding-left: 1;
}

/* these were copied from deleted tccs fomr general settings */
TextSwitch {
    border: tall transparent;
    height: 3;
    width: 16;
    padding: 0 2;
}

.icon_buttons {
    width: 3;
    height: 3;
    margin: 0 1 0 0;
    min-width: 6;
    offset-x: 1;
}

LabelledSwitch {
    width: 55;
    height: 3;
    Horizontal {
        width: 50;
    }
    Static {
        width: 28;
        border: transparent;
    }
    Switch {
        offset-x: -3;
    }
}

StaticAndSelection {
    height: 3;
    width: 65;
    /*background: black;*/
    Static {
        width: 25;
        border: transparent;
    }
    Select {
        width: 30;
        border: none;
        Static {
            border: none;
        }
        Horizontal {
            Static#label {
                width: 1fr;
                height: auto;
                color: $text-disabled;
                background: transparent;
            }

            .arrow {
                box-sizing: content-box;
                width: 1;
                height: 1;
                padding: 0 0 0 1;
                color: $text-muted;
                background: transparent;
            }
        }
    }
}

ChangeableStatic {
    height: 3;
    width: 55;
    Static {
        width: 26;
        border: transparent;
    }
    #value_holder {
        border: tall green;
        width: auto;
        padding: 0 2 0 2;
    }
}

GeneralSettings {
    align: center middle;
    content-align: center middle;
    height: auto;
    #description {
        height: 4;
        padding: 1;
        text-align: justify;
    }
    #top_container {
    }
    #inner_container {
        height: auto;
        align: center middle;
        #intro {
            align: left middle;
            width: 60;
            height: 5;
            border: black tall;
            margin: 1;
            Static {
                padding: 0 4;
                text-style: bold;
                width: auto;
                border: transparent;
            }
        }
    }
}

ValueSetterModal {
    #draggable_modal_screen_container_wrapper {
        width: 40;
        height: 14;
        background: black;
    }
    Vertical {
        border-left: thick $accent;
        border-right: thick $accent;
        border-bottom: thick $accent;
    }
    Static {
        height: 3;
        content-align: center middle;
        text-style: bold;
    }
    Input {
        width: 10;
        border: tall $accent;
        offset-x: 15;
    }
    Horizontal {
        height: 4;
        align: right bottom;
        offset-x: 1;
        Button {
            margin: 1;
        }
    }
}

HelpModal {
    #draggable_modal_screen_container_wrapper {
        width: 40;
        height: 12;
        background: black;
    }
    Vertical {
        border-left: thick $accent;
        border-right: thick $accent;
        border-bottom: thick $accent;
    }
    Static {
        height: 3;
        content-align: center middle;
        text-style: bold;
    }
    Input {
        width: 10;
        border: tall $accent;
        offset-x: 15;
    }
    Horizontal {
        height: 6;
        align: right bottom;
        offset-x: 1;
        Button {
            margin: 1;
        }
    }
}
