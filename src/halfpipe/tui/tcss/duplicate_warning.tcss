#false_input_dialog {
    grid-size: 1;
    grid-gutter: 1 2;
    grid-rows: 1fr 3;
    padding: 0 1;
    width: 40;
    height: 11;
    border: thick $warning;
    background: $surface;
}

#message {
    /* column-span: 2;*/
    height: 1fr;
    width: 1fr;
    content-align: center middle;
    color: $warning;
}

#false_input_ok_button {
    margin: 0 7;
    column-span: 1;
    content-align: right middle;
    align: right middle;
    width: 100%;
    /* padding: 0 3;
    grid-gutter: 0 1;*/
}
